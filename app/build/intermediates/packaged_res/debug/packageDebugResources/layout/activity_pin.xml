<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruipereira.MySweetCall.Pin">
    <Button
        android:id="@+id/bt_fechar_app"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fechar"/>
    <EditText
        android:id="@+id/et_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/pino"
        android:inputType="numberPassword"
        android:textSize="60sp" />
    <Button
        android:id="@+id/bt_iniciar"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sessao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_avancar_agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/agenda"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_sobre"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/sobre" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_estado_pin"
        android:text="Pin Alterado"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#f00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/telefonevermelho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>